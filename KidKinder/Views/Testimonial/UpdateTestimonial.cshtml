@model KidKinder.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Görüş Güncelle</h5>
                                <span>Görüş ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <input type="hidden" name="TestimonialId" value="@Model.TestimonialId" class="form-control">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ad Soyad</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Başlık</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Title" value="@Model.Title" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Resim</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Yorum</label>
                                        <div class="col-sm-10">
                                            <textarea rows="5" type="text" name="Comment" class="form-control">@Model.Comment</textarea>
                                        </div>
                                    </div>
                                    <button class="btn btn-outline-success">Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="styleSelector">

    </div>
</div>











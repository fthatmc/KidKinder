@model KidKinder.Entities.ClassRoom

@{
    ViewBag.Title = "UpdateClassRoom";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni Sınıf Girişi</h5>
                                <span>Sınıf ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    @Html.HiddenFor(x => x.ClassRoomId, new { @class = "form-control" })
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Sınıflar</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Title" value="@Model.Title" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Çocuk Yaşları</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="AgeOfKids" value="@Model.AgeOfKids" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Kontenjan</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="TotalSeats" value="@Model.TotalSeats" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ders Saatleri</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="ClassTime" value="@Model.ClassTime" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ücretler</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Price" value="@Model.Price" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Resim</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Açıklama</label>
                                        <div class="col-sm-10">
                                            <textarea rows="5" type="text" name="Description" class="form-control">@Model.Description</textarea>
                                        </div>
                                    </div>
                                    <button class="btn btn-outline-info">Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="styleSelector">

    </div>
</div>






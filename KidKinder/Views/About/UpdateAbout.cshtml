@model KidKinder.Entities.About

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Hakkımda Güncelle</h5>
                                <span>Hakkımda ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    @Html.HiddenFor(x => x.AboutId, new { @class = "form-control" })
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Üst Başlık</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Alt Başlık</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Büyük Resim</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.BigImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Küçük Resim</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.SmallImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Açıklama</label>
                                         <div class="col-sm-10">
                                         @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <button class="btn btn-outline-info">Güncelle</button>
                                </form>
                            </div>
                        </div>
                        <!-- Basic Form Inputs card end -->
                    </div>
                </div>
            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
    <div id="styleSelector">

    </div>
</div>







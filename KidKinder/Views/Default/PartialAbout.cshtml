@model List<KidKinder.Entities.About>

<div class="container-fluid py-5">
    <div class="container">
        @foreach (var x in Model)
        {
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <img class="img-fluid rounded mb-5 mb-lg-0"
                         src="@x.BigImageUrl"
                         alt="" />
                </div>
                <div class="col-lg-7">
                    <p class="section-title pr-5">
                        <span class="pr-2">@x.Header</span>
                    </p>
                    <h1 class="mb-4">@x.Title</h1>
                    <p>
                        @x.Description
                    </p>
                    <div class="row pt-2 pb-4">
                        <div class="col-6 col-md-4">
                            <img class="img-fluid rounded" src="@x.SmallImageUrl" alt="" />
                        </div>
                        <div class="col-6 col-md-8">
                            @Html.Action("PartialAboutList", "Default")
                        </div>
                           

                        </div>

                    </div>
            </div>
        }

    </div>
</div>

@model List<KidKinder.Entities.Contact>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">KidKinder Admin Paneli</h5>
                    <p class="m-b-0">Uygulamanın yeni veri girişi, güncelleme, silme ve diğer işlemlerin yapıldığı sayfadır.</p>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Veli İletişim Listesi</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Veli İletişim Listesi Tablosu</h5>
                        <span>Veli İletişim ile İlgili İşlemleri Burdan Yapabilirsiniz</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sıra No</th>
                                        <th>Telefon</th>
                                        <th>Mail</th>
                                        <th>Adres</th>
                                        <th>Açıklama</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Durumu Değiştir</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int sirano = 0;}
                                    @foreach (var x in Model)
                                    {
                                        <tr>
                                            <td>@{sirano++;} @sirano</td>
                                            <td>@x.NameSurname</td>
                                            <td>@x.Email</td>
                                            <td>@x.Subject</td>
                                            <td>@x.Message</td>
                                            <td>@x.SendDate.ToShortDateString()</td>
                                            @if (x.IsRead == true)
                                            {
                                                <td>Okundu</td>
                                            }
                                            else
                                            {
                                                <td>Okunmadı!!!</td>

                                            }

                                            @if (x.IsRead == true)
                                            {
                                                <td><a href="/Contact/ContactStatusToFalse/@x.ContactId" class="btn btn-outline-danger">X</a></td>
                                            }
                                            else
                                            {
                                                <td><a href="/Contact/ContactStatusToTrue/@x.ContactId" class="btn btn-outline-success">✓</a></td>
                                            }

                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/Contact/DeleteContact/@x.ContactId">

                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>



















